<?xml version="1.0" encoding="utf-8"?>
<application xmlns="http://ns.adobe.com/air/application/1.0"> 
    <id>simian.SitelliteDesktop</id>
    <version>1.0</version>
    <name>Sitellite Desktop</name>
    <filename>Sitellite Desktop</filename>
    <description>Sitellite CMS desktop-based multisite login and monitoring tool.</description>
    <copyright>Copyright 2008, Simian Systems Inc.</copyright>
    <initialWindow>
    	<title>Sitellite Desktop</title>
        <content>index.html</content>
        <visible>true</visible>
        <systemChrome>standard</systemChrome>
        <transparent>false</transparent>
        <width>800</width>
        <height>400</height>
        <minimizable>true</minimizable>
        <x>100</x>
        <y>100</y>
        <minSize>800 400</minSize>
    </initialWindow>
    <icon>
    	<image16x16>icons/16.png</image16x16>
    	<image32x32>icons/32.png</image32x32>
    	<image48x48>icons/48.png</image48x48>
    	<image128x128>icons/128.png</image128x128>
    </icon>
    <customUpdateUI>false</customUpdateUI>
</application>